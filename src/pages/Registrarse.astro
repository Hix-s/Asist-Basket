---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="Iniciar items-center flex justify-center ">
			<h1 class=" text-white">Registrarse</h1>
		</div>
		<div class="Rellenar">
			<h1 class=" text-black">Correo Electronico</h1>
			<input type="email" id="Correo" placeholder="ecbas@gmail.com" required/>
			<h1 class=" text-black">Contraseña</h1>
			<input type="password" id="Contraseña" placeholder="ecbas1234 " required/>
			<h1 class=" text-black">Confirmar Contraseña</h1>
			<input type="password" id="Contraseña" placeholder="ecbas1234 " required/>
			<button onclick="enviarDatos()" id="Registrarse" class="text-white">Registrarse</button>
			<div class="BarraRegistro">
				<a href="." id="Volver" class="text-white">Iniciar Sesión</a>
			</div>
		</div>
		
	</main>
</Layout>

<style>
	.Iniciar {
		position: relative;
		top: 100px;
		width: 100%;
		height: 70px;
		background-color: #1B3A61;
	}
	.Rellenar{
		display: flex;
		top: 170px;
		position: relative;
		justify-content: center;
		align-items: center;
		flex-direction: column;
	}
	#Correo,#Contraseña{
		width: 250px;
		height: 40px;
		background-color: #F2E2C4;
		position: relative;
		border-radius: 10px;
	}

	#Registrarse{
		top: 20px;
		width: 100px;
		height: 40px;
		background-color: #1B3A61;
		position: relative;
		border-radius: 10px;
		
	}
	#Volver{
		top: 100px;
		display: flex;
		position: relative;
		justify-content: center;
		width: 150px;
		height: 40px;
		background-color: #1B3A61;
		color: white;
		text-align: center;
		line-height: 40px;
		border-radius: 10px;
		text-decoration: none;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}
</style>
